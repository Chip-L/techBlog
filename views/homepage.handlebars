{{#each posts as |post|}}
  <div class="card">
    <div class="card-header">
      <div class="title">
        {{post.title}}
      </div>
      <div class="post-info">
        Posted by
        {{post.user.name}}
        on
        {{format_date post.created_at}}{{#if post.updated_at}}
          updated on
          {{format_date post.updated_at}}{{/if}}.
      </div>
    </div>
    <div class="card-body">
      {{post.content}}
    </div>
  </div>
{{else}}
  <p class="empty">No Content</p>
{{/each}}